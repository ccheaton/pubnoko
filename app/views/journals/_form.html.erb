<%= form_for @journal do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :short_name %><br />
    <%= f.text_field :short_name %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url, :size => 100 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "80x4" %>
  </p>
  <p><%= f.submit %></p>
<% end %>
